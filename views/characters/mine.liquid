{% layout 'layout.liquid' %}
{% block content %}
    <div>
        <h2 class="display-6">My Characters</h2>
        <div class="row">
            
            {% for character in characters %}
                
                <div class="card" style="width: 25rem;">
                    <h5 class="card-header">{{character.name}}</h5>
                    <div class="card-body">
                        <p class="card-title text-muted fst-italic" style="height:20vh; overflow:auto;">
                            {% if character.quotes.length > 0 %}
                                "{{character.random}}"
                            {% else %}
                                No quotes have been added.
                            {% endif %}
                        </p>
                        
                        <a class="btn btn-info" href="/characters/{{character.id}}">
                            View {{character.name}}
                        </a>
                    </div>
                </div> 
                      
            {% endfor %}
        </div>
    </div>
{% endblock %}