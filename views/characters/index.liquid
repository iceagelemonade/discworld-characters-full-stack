{% layout 'layout.liquid' %}
{% block content %}
    <div>
        <h2 class="display-6">All Characters</h2>
        <div class="row">
            
            {% for character in characters %}
                
                <div class="card" style="width: 20rem;">
                    <h5 class="card-header">{{character.name}}</h5>
                    <div class="card-body">
                        <h5 class="card-title">
                            {{forloop.index}}
                            {% if character.quotes.length > 0 %}
                                "{{character.random}}"
                                
                                
                            {% else %}
                                No quotes have been added.
                            {% endif %}
                        </h5>
                        
                        <a class="btn btn-info" href="/characters/{{character.id}}">
                            View {{character.name}}
                        </a>
                    </div>
                </div> 
                      
            {% endfor %}
        </div>
    </div>
{% endblock %}